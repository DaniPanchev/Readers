<Window x:Class="WpfLibraryDb.InputDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Input Dialog" Height="150" Width="400">
    <Grid>
        <StackPanel>
            <TextBlock Name="MessageTextBlock" TextWrapping="Wrap" Margin="10"/>
            <TextBox Name="ResponseTextBox" Margin="10"/>
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" Margin="10">
                <Button Content="OK" Width="75" Margin="5" Click="OnOkClicked"/>
                <Button Content="Cancel" Width="75" Margin="5" Click="OnCancelClicked"/>
            </StackPanel>
        </StackPanel>
    </Grid>
</Window>